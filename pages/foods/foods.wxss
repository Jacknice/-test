page {
  padding-bottom: 95rpx;
}
.wux-grid__inner{
  padding: 20rpx 20rpx!important;
}
.wux-grid__label{
  font-size: 40rpx!important;
}
.noneborder{
  border-radius: 0!important;
  margin: 0!important;
}
.tabs{
  background: #f3f3f3!important;
}
.wux-tabs__tab{
  position: inherit!important;
}
.dw{
  text-align: center;
  display: flex;
  justify-content: center;
  padding: 30rpx;
}
.dw .active{
  color: #ffc900;
}
.dw view{
  margin-right: 40rpx;
}
.layer .name{
  color: #333;
  font-size: 26rpx;
}
.layer .kg{
  color: #ffc900;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.layer .kg text{
  font-size: 28rpx;
}
.layer .ka{
  font-size: 25rpx;
}
.tip {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
  border-bottom: 1px solid #f3f3f3;
  display: block;
  margin-left: 30rpx;
}

.container1 {
  padding-top: 88rpx;
}

.list .li {
  display: flex;
  align-items: center;
  width: 750rpx;
}

.list .li image {
  width: 130rpx;
  height: 130rpx;
  padding:15rpx;
}

.list .li .right .name {
  font-size: 35rpx;
  margin-bottom: 10rpx;
}

.list .li .right .info {
  font-size: 26rpx;
}

.list .li .right .info text {
  color: red;
}
.list .li .right view{
  text-align: left;
}
.list .li .right {
  width: 100%;
  border-bottom: 1rpx solid #f3f3f3;
  padding: 35rpx 10rpx;
  display: flex;
  justify-content: space-between
}

.search {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.btn {
  margin: 0 !important;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.footer .total {
  border-radius: 50%;
  background: red;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  text-align: center;
  line-height: 40rpx;
  margin-left: 10rpx;
  font-size: 26rpx;
}
.loading{
  text-align: center;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: center;
  background: #fff;
  padding: 20rpx;
}
.loading image{
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}